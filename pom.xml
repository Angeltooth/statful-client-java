<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.mindera.telemetron</groupId>
    <artifactId>telemetron-client-java</artifactId>
    <version>1.0.0-alpha-3-SNAPSHOT</version>
    <packaging>pom</packaging>

    <scm>
        <connection>scm:git:ssh://bitbucket.org/mindera/telemetron-client-java.git</connection>
        <developerConnection>scm:git:git@bitbucket.org:mindera/telemetron-client-java.git</developerConnection>
        <url>https://bitbucket.org/mindera/telemetron-client-java.git</url>
        <tag>HEAD</tag>
    </scm>

    <modules>
        <module>domain</module>
        <module>annotations</module>
        <module>core-client</module>
        <module>udp-client</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.5.3</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <version>2.17</version>
                <executions>
                    <execution>
                        <id>validate</id>
                        <phase>validate</phase>
                        <configuration>
                            <configLocation>checkstyle.xml</configLocation>
                            <encoding>UTF-8</encoding>
                            <consoleOutput>true</consoleOutput>
                            <failsOnError>true</failsOnError>
                        </configuration>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <version>2.7</version>
                <configuration>
                    <aggregate>true</aggregate>
                    <check>
                        <haltOnFailure>false</haltOnFailure>
                        <totalBranchRate>95</totalBranchRate>
                        <totalLineRate>95</totalLineRate>
                        <packageLineRate>95</packageLineRate>
                        <packageBranchRate>95</packageBranchRate>
                    </check>
                    <instrumentation>
                        <excludes>
                            <!-- Enumerations only -->
                            <exclude>com/mindera/telemetron/client/api/Aggregations.class</exclude>
                        </excludes>
                    </instrumentation>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>clean</goal>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>findbugs-maven-plugin</artifactId>
                <version>3.0.3</version>
                <configuration>
                    <effort>Max</effort>
                    <threshold>Low</threshold>
                    <xmlOutput>false</xmlOutput>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencyManagement>
        <dependencies>

            <dependency>
                <groupId>com.mindera.telemetron</groupId>
                <artifactId>telemetron-domain</artifactId>
                <version>1.0.0-alpha-3-SNAPSHOT</version>
            </dependency>

            <dependency>
                <groupId>com.mindera.telemetron</groupId>
                <artifactId>telemetron-coreclient-java</artifactId>
                <version>1.0.0-alpha-3-SNAPSHOT</version>
            </dependency>

            <dependency>
                <groupId>com.mindera.telemetron</groupId>
                <artifactId>telemetron-coreclient-java</artifactId>
                <version>1.0.0-alpha-3-SNAPSHOT</version>
                <type>test-jar</type>
                <scope>test</scope>
            </dependency>

            <dependency>
                <groupId>org.hamcrest</groupId>
                <artifactId>hamcrest-all</artifactId>
                <version>1.3</version>
                <scope>test</scope>
            </dependency>

            <dependency>
                <groupId>org.mockito</groupId>
                <artifactId>mockito-all</artifactId>
                <version>1.10.19</version>
                <scope>test</scope>
            </dependency>

            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>4.12</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <repositories>
        <repository>
            <id>mindera-releases</id>
            <name>Mindera Nexus Releases Repository</name>
            <url>http://nexus.mindera:8081/content/repositories/releases</url>
        </repository>
        <repository>
            <id>mindera-snapshots</id>
            <name>Mindera Nexus Snapshots Repository</name>
            <url>http://nexus.mindera:8081/content/repositories/snapshots</url>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>mindera-releases</id>
            <name>Mindera Nexus Releases Repository</name>
            <url>http://nexus.mindera/content/repositories/releases</url>
        </repository>
        <snapshotRepository>
            <id>mindera-snapshots</id>
            <name>Mindera Nexus Snapshots Repository</name>
            <url>http://nexus.mindera/content/repositories/snapshots</url>
        </snapshotRepository>
    </distributionManagement>

</project>